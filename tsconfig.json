{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "lib": ["esnext", "dom", "esnext.intl", "es2017.intl", "es2018.intl"],
    "sourceMap": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "jsx": "react",
    "rootDirs": ["src"],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src",
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
